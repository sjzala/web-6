<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User History</title>
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', { page: '/userHistory' }) %>
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold">User History</h1>
        <h2 class="text-xl">Welcome, <%= session.user.userName %></h2>
        <p class="text-lg">Email: <%= session.user.email %></p>
        <table class="min-w-full bg-white">
            <thead>
                <tr>
                    <th class="py-2 px-4 bg-gray-200">Login Date/Time</th>
                    <th class="py-2 px-4 bg-gray-200">Client Information</th>
                </tr>
            </thead>
            <tbody>
                <% session.user.loginHistory.forEach((entry) => { %>
                    <tr>
                        <td class="border px-4 py-2"><%= entry.dateTime %></td>
                        <td class="border px-4 py-2"><%= entry.userAgent %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
